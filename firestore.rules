service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global Admin Rule: Allow specific emails to read/write EVERYTHING
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email in ["hyewonh@gmail.com", "ryan@example.com", "admin@kingdommemory.com"];
    }

    match /users/{userId}/{document=**} {
      // Allow user to read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /verses/{verseId} {
      allow read: if true;
      allow write: if false; // Admin only (covered by global rule)
    }
    
    match /user_progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
